{# empty Twig template #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name ="viewport" content="width=device-width,  initial-scale=1">
        
        <title> {% block title %} ADMC {% endblock %}</title>
        
        {% block stylesheets %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
            <link href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
        {% endblock %}
        
        
    </head>
    
    
    <body>
        
        <div class="container">
            <div class="jumbotron" id="header">
                <h1>ADMC Platform</h1>
                <p>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        Connecté en tant que {{ app.user.username }}
                        -
                        <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                    {% endif %}
                </p>
                {{ render(controller("ADMCCoreBundle:Base:menu")) }}
                {{ render(controller("ADMCDSIBundle:Dsi:menu")) }}
            </div>
            
            
            <div class="row">
                                
                <div id="content" class="col-md-9">
                    
                    {% block body %}
                    {% endblock %}
                    

                </div>
            </div>
                    
            <hr>
            
            <footer>
                <p>Projet développé par Mr Vougny, Mr Salles, Mr Nardizzi, Mr Fourcault. DATE: {{ 'now'|date('Y') }}</p>
            </footer>
        </div>
            
        {% block javascripts %}
            <script src="//code.jquery.com/jquery-2.1.1.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        
        {% endblock %}
        
        
        
    </body>
    
</html>